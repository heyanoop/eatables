<%- include('../Layouts/adminHeader.ejs') %>

<style>
  .card {
    border: 1px solid #ddd;
    border-radius: 4px;
  }

  .card-header {
    font-weight: bold;
  }

  .table thead th {
    font-weight: bold; /* Make table headings bold */
    border-bottom: 2px solid #dee2e6;
    text-align: center; /* Center-align the headings */
  }

  .table tbody td {
    font-weight: normal; /* Less bold content */
    text-align: center; /* Center-align the content */
  }

  .table thead th.left-align {
    text-align: left; /* Align the content to the left */
  }
</style>

<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Most Sold</h6>
          </div>
        </div>
        <div class="card-body px-0 pb-2">
          <div class="row">
            <!-- Products Box -->
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h5 class="mb-0">Products</h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                      <thead>
                        <tr>
                          <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 left-align">Product</th>
                          <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Total Orders</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% topProducts.forEach(product => { %>
                        <tr>
                          <td>
                            <div class="d-flex px-2 py-1">
                              <div>
                                <img src="/uploads/<%= product.productDetails.image[0] %>" class="avatar avatar-sm me-3 border-radius-lg" alt="<%= product.productDetails.name %>">
                              </div>
                              <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm"><%= product.productDetails.title %></h6>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0"><%= product.totalOrders %> </p>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <!-- Categories Box -->
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h5 class="mb-0">Categories</h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                      <thead>
                        <tr>
                          <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Category</th>
                          <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Total Orders</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% topCategories.forEach(category => { %>
                        <tr>
                          <td><%= category.categoryDetails.name %></td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0"><%= category.totalOrders %> </p>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../Layouts/adminFooter.ejs') %>
