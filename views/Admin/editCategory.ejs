<%- include('../Layouts/adminHeader.ejs') %>


<%if(locals.categoryDetail){%>
<div class="container-fluid py-4">    
<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3" style="font-size: 1.25rem; font-weight: bold;">Create Categories</h6>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form action="/admin/updateCategory?id=<%= categoryDetail.id %>" method="POST">
                            <div class="mb-4">
                                <label for="product_name" class="form-label" style="font-weight: bold; font-size: 1rem;">Category Name</label>
                                <input type="text" placeholder="Type here" value="<%= categoryDetail.name %>" class="form-control" id="product_name" name="categoryDetailName" required />
                                <div id="nameError" class="text-danger"></div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label" style="font-weight: bold; font-size: 1rem;">Description</label>
                                <input type="text" placeholder="Type here" class="form-control" value="<%= categoryDetail.description %>" name="categoryDetailDescription" required />
                                <div id="descriptionError" class="text-danger"></div>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-sm">Update Categories</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
</div>


<%}%>



<%- include('../Layouts/adminFooter.ejs') %>


