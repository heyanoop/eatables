<script>
function generatePDF() {
    html2canvas(document.getElementById('orderConfirmation')).then(canvas => {
        const imgData = canvas.toDataURL('image/png');
        const pdf = new jsPDF({
            orientation: 'p', // Portrait
            unit: 'mm',
            format: [210, 297] // A4 size in mm
        });

        const pageWidth = 210; // A4 width in mm
        const pageHeight = 297; // A4 height in mm
        const topMargin = 50; // Top margin in mm
        const leftMargin = 5; // Left margin in mm
        const rightMargin = 5; // Right margin in mm
        const imgWidth = pageWidth - leftMargin - rightMargin; // Width of the image
        const imgHeight = canvas.height * imgWidth / canvas.width; // Calculate the height of the image based on the aspect ratio
        let heightLeft = imgHeight;

        let position = topMargin;
        let xPosition = leftMargin;

        // Add the first page with top, left, and right margins
        pdf.addImage(imgData, 'PNG', xPosition, position, imgWidth, imgHeight);
        heightLeft -= (pageHeight - topMargin);

        // Add additional pages if needed
        while (heightLeft > 0) {
            position = topMargin;
            pdf.addPage();
            pdf.addImage(imgData, 'PNG', xPosition, position, imgWidth, imgHeight);
            heightLeft -= (pageHeight - topMargin);
        }

        pdf.save('order-confirmation.pdf');
    }).catch(error => {
        console.error('Error generating PDF:', error);
    });
}


</script>


