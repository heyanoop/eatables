                    <tbody id="cart-body">
                        <% if (order && order.products && order.products.length > 0) { %>
                            <% let subtotal = 0; %>
                            <% order.products.forEach(product => { %>
                                <tr>
                                    <td><%= product.productId.title %></td>
                                    <td>₹ <%= product.productId.salesPrice.toFixed(2) %></td>
                                    <td> <%= product.quantity %></td>
                                    <td>₹ <%= (product.quantity * product.productId.salesPrice).toFixed(2) %></td>
                                </tr>
                                <% subtotal += (product.quantity * product.productId.salesPrice).toFixed(2); %>
                            <% }); %>
                        <% } %>
                    </tbody>
