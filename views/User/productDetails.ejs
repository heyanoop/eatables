          <script>
            function rate(element) {
              let rating = element.getAttribute("data-rating");

              let stars = document.querySelectorAll(".fa-star");

              // Loop through each star
              stars.forEach((star) => {
                // let starRating = star.getAttribute('data-rating');
                // Checking current star rating position
                if (star.getAttribute("data-rating") <= rating) {
                  star.classList.remove("text-muted");
                  star.classList.add("text-secondary");
                } else {
                  star.classList.remove("text-secondary");
                  star.classList.add("text-muted");
                }
              });

              // update the hidden input with rating
              document.querySelector('input[name="rating"]').value = rating;
            }

            function resetRating() {
              let stars = document.querySelectorAll(".fa-star");
              stars.forEach((star) => {
                star.classList.remove("text-secondary");
                star.classList.add("text-muted");
              });

              document.querySelector('input[name="rating"]').value = 0;
            }

