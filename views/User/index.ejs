  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('search-input');
      const searchButton = document.getElementById('search-button');
      
      // Function to redirect with search query
      function redirectToShop(query) {
        if (query.length > 0) {
          window.location.href = `/shopPage?page=1&productName=${encodeURIComponent(query)}`;
        }
      }
    
      // Redirect when user presses Enter
      searchInput.addEventListener('keyup', function(event) {
        if (event.key === 'Enter') {
          redirectToShop(searchInput.value.trim());
        }
      });
    
      // Redirect when user clicks the search button
      searchButton.addEventListener('click', function() {
        redirectToShop(searchInput.value.trim());
      });
    });
    </script>

